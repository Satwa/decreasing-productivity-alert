{
	"manifest_version": 2,

	"name": "Decreasing Productivity Alert",
	"description": "Stop spending too much time on useless websites",
	"options_page": "settings.html",
	"version": "0.9.0",

	"browser_action": {
		"default_icon": "img/icon.png",
	    "default_popup": "popup.html"
    },

    "icons": {
    	"16": "img/icon.png",
    	"48": "img/icon.png",
    	"128": "img/icon.png"
    },

	"background": {
		"scripts": ["background.js"]
	},

	"permissions": [
		"storage",
		"notifications",
		"activeTab",
		"tabs"
	],

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["dpascript.js"]
		}
	]
}